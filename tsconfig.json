{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ESNext",
        "strict": true,
        "esModuleInterop": true,
        "outDir": ".dist",
        "rootDir": "./src",
        "lib": [
            "ESNext"
        ],
        "sourceMap": true,
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "src/**/*.test.ts"
    ]
}